{
  "appId": "com.xivstrat.app",
  "productName": "XivStrat",
  "directories": {
    "output": "electron-dist",
    "buildResources": "electron/build"
  },
  "files": [
    "dist/**/*",
    "electron/**/*",
    "!electron/build/**/*",
    "!electron-dist/**/*"
  ],
  "extraMetadata": {
    "main": "electron/main.js"
  },
  "mac": {
    "category": "public.app-category.utilities",
    "icon": "electron/build/icon.icns",
    "target": [
      {
        "target": "dir",
        "arch": ["x64", "arm64"]
      }
    ]
  },
  "win": {
    "icon": "electron/build/icon.ico",
    "target": [
      {
        "target": "dir",
        "arch": ["x64"]
      }
    ],
    "sign": false,
    "verifyUpdateCodeSignature": false
  },
  "linux": {
    "icon": "electron/build/icon.png",
    "category": "Utility",
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      },
      {
        "target": "deb",
        "arch": ["x64"]
      }
    ]
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  }
}
