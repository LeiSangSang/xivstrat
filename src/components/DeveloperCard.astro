---
import { Image } from 'astro:assets'
import { type Developer } from '@/data/developer'

interface Props {
  developer: Developer
  class?: string
}

const { developer, class: className = '' }: Props = Astro.props

function isValidURL(str: string): boolean {
  try {
    new URL(str)
    return true
  } catch (_) {
    return false
  }
}
---

<div
  class="group bg-card/50 hover:bg-card/80 border-border/50 relative flex max-w-sm flex-col items-center overflow-hidden rounded-xl p-4 text-center shadow-xl transition-all duration-500 hover:shadow-2xl"
>
  <div>
    <Image src={developer.avatar} alt={developer.name} class="w-24 rounded-full object-cover" />
  </div>
  <div class="duration-500">
    <h1 class="font-semibold text-zinc-700 dark:text-zinc-300">{developer.name}</h1>
    <p class="text-sm text-zinc-700 dark:text-zinc-300">{developer.gameName}</p>
    {
      developer.link && (
        <a
          href={isValidURL(developer.link) ? developer.link : undefined}
          target="_blank"
          class="text-zinc-500 dark:text-zinc-400"
        >
          {developer.link}
        </a>
      )
    }
  </div>
</div>
