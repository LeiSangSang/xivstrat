---
import type { ImageMetadata } from 'astro'

import { Image } from 'astro:assets'

import { cn } from '@/lib/utils'

interface Props {
  icon: ImageMetadata
  name: string
  class?: string
  [key: string]: any
}

const { icon, name, class: className = '', ...props }: Props = Astro.props
---

<span
  class={cn(
    'relative -mx-[calc(1em*2/18)] inline-block h-[calc(1em*30/18)] w-[calc(1em*30/18)] align-middle',
    className,
  )}
  {...props}
>
  <div class="relative inline-block w-full">
    <Image src={icon} alt={name} />
  </div>
</span>
