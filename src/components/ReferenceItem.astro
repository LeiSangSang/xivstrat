---
import { cn } from '@/lib/utils'

import LinkSVG from '@/assets/svg/link.svg'
import BiliBiliSVG from '@/assets/svg/bilibili.svg'

import Separator from '@/components/Separator.astro'
import AreaBox from '@/components/AreaBox.astro'

interface Props {
  class?: string
  listClass?: string
  list: {
    url: string
    label: string
    embed?: string
  }[]
}

const { class: className = '', listClass = '', list }: Props = Astro.props
---

<AreaBox>
  <ol class={cn('flex flex-col gap-2', className)}>
    {
      list.map((item, index) => (
        <div>
          <li class={cn('flex h-4 items-center gap-2', listClass)}>
            <div class="relative w-6">
              <em class="absolute -bottom-0.5 left-4.5 w-min text-[0.6em]">{index + 1}</em>
              {item.url?.includes('bilibili') ? <BiliBiliSVG class="w-5 pr-0.5 pl-0.5" /> : <LinkSVG class="w-5" />}
            </div>
            <Separator orientation="vertical" />
            <a class="hover:underline" href={item.url} target="_blank">
              <em>{item.label}</em>
            </a>
          </li>
        </div>
      ))
    }
  </ol>
</AreaBox>
