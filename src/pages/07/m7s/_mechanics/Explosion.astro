---
import type { Time } from '@/lib/utils'

import { Image } from 'astro:assets'

import Span from '@/components/Span.vue'
import MechanicSection from '@/components/section/MechanicSection.astro'
import SolutionSection from '@/components/section/SolutionSection.astro'

import BruteAbombinator from '../_components/BruteAbombinator.astro'
import ExplosionCast from '../_components/ExplosionCast.astro'
import QuarrySwampCast from '../_components/QuarrySwampCast.astro'

import img from '@/assets/07/m7s/Tmp.png'
import explosion1 from '@/assets/07/m7s/explosion/1.png'
import explosion2 from '@/assets/07/m7s/explosion/2.png'
import solution1 from '@/assets/07/m7s/explosion/solution_1.png'
import solution2 from '@/assets/07/m7s/explosion/solution_2.png'
import solution3 from '@/assets/07/m7s/explosion/solution_3.png'

interface Props {
  base: Time
}

const { base = 0 }: Props = Astro.props
---

<ExplosionCast start="01:36.48" base={base} />
<MechanicSection>
  <div class="flex flex-col gap-4">
    <div class="gap-strat flex items-center">
      随机顺序生成三枚
      <Span variant="rose">陨石AoE</Span>
      ，依次落地并造成
      <Span variant="sky">距离衰减</Span>
      伤害
    </div>
    <h4 class="mt-4 text-2xl">
      <Span variant="yellow">陨石刷新</Span>
    </h4>
    <div class="grid grid-cols-4 gap-x-2 gap-y-4">
      <div class="flex flex-col items-center gap-1">
        <Image src={explosion1} alt="" class="border-2 border-fuchsia-400 dark:border-fuchsia-100" />
        <div>情况1</div>
      </div>
      <div class="flex flex-col items-center gap-1">
        <Image src={explosion2} alt="" class="border-2 border-fuchsia-400 dark:border-fuchsia-100" />
        <div>情况2</div>
      </div>
    </div>
  </div>
</MechanicSection>
<SolutionSection>
  <div class="flex flex-col gap-4">
    <div class="gap-strat flex items-center">
      站在
      <Span variant="blue">陨石三</Span>
      附近等待
      <Span variant="red">陨石一</Span>
      爆炸后，远离
      <Span variant="yellow">陨石二</Span>
      并靠近
      <Span variant="red">陨石一</Span>
      的刷新点
    </div>
    <div class="grid grid-cols-3 gap-x-2 gap-y-4">
      <div class="flex flex-col items-center gap-1">
        <Image src={solution1} alt="" class="border-2 border-fuchsia-400 dark:border-fuchsia-100" />
        <div>Step 1</div>
      </div>
      <div class="flex flex-col items-center gap-1">
        <Image src={solution2} alt="" class="border-2 border-fuchsia-400 dark:border-fuchsia-100" />
        <div>Step 2</div>
      </div>
      <div class="flex flex-col items-center gap-1">
        <Image src={solution3} alt="" class="border-2 border-fuchsia-400 dark:border-fuchsia-100" />
        <div>Step 3</div>
      </div>
    </div>
  </div>
</SolutionSection>
