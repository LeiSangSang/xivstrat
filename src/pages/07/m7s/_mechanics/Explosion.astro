---
import type { Time } from '@/lib/utils'

import { Image } from 'astro:assets'

import Span from '@/components/Span.vue'
import MechanicSection from '@/components/section/MechanicSection.astro'
import SolutionSection from '@/components/section/SolutionSection.astro'

import BruteAbombinator from '../_components/BruteAbombinator.astro'

import explosion1 from '@/assets/07/m7s/explosion/1.png'
import explosion2 from '@/assets/07/m7s/explosion/2.png'
import solution1 from '@/assets/07/m7s/explosion/solution_1.png'
import solution2 from '@/assets/07/m7s/explosion/solution_2.png'
import solution3 from '@/assets/07/m7s/explosion/solution_3.png'
import ImgRow from '@/components/typography/ImgRow.astro'

interface Props {
  base: Time
}

const { base = 0 }: Props = Astro.props
---

<MechanicSection>
  <div class="flex flex-col gap-4">
    <div class="paragraph">
      <BruteAbombinator />召唤三颗
      <Span variant="amber">陨石</Span>
      ，依次落地，扩散光效闪烁<Span variant="pink">9</Span>下后造成
      <Span variant="rose">距离衰减</Span>
      伤害
    </div>
    <h4 class="mt-4 text-2xl">
      <Span variant="yellow">陨石刷新</Span>
    </h4>
    <ImgRow
      bordered={false}
      imgs={[
        { src: explosion1, alt: '陨石刷新情况1', title: '情况1' },
        { src: explosion2, alt: '陨石刷新情况2', title: '情况2' },
      ]}
    />
  </div>
</MechanicSection>
<SolutionSection>
  <div class="flex flex-col gap-4">
    <div class="paragraph"><Span variant="red">第1颗</Span>陨石出现后，前往其对面方向</div>
    <div class="paragraph">
      <Span variant="yellow">第2颗</Span>陨石出现后，前往<Span variant="blue">第3颗</Span>陨石附近等待
    </div>
    <div class="paragraph">
      <Span variant="red">第1颗</Span>
      陨石爆炸后，<Span variant="pink">远离</Span>
      <Span variant="yellow">第2颗</Span>
      陨石并<Span variant="pink">远离</Span>
      <Span variant="blue">第3颗</Span>
      陨石
    </div>
    <div class="paragraph">
      <Span variant="yellow">第2颗</Span>陨石爆炸后，<Span variant="pink">远离</Span>
      <Span variant="blue">第3颗</Span>陨石
    </div>
    <ImgRow
      bordered={false}
      imgs={[
        { src: solution1, alt: '陨石躲避步骤1', title: '步骤1' },
        { src: solution2, alt: '陨石躲避步骤2', title: '步骤2' },
        { src: solution3, alt: '陨石躲避步骤3', title: '步骤3' },
      ]}
    />
  </div>
</SolutionSection>
