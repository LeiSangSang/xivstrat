---
import type { Time } from '@/lib/utils'
import type { VariantType } from '@/lib/variant'

import Badge from '@/components/Badge.astro'
import EventSection from '@/components/section/EventSection.astro'
import Span from '@/components/Span.vue'
import Skill from '@/components/typography/Skill.astro'

interface Props {
  time: Time
  base?: Time
}

const { time, base = 0 }: Props = Astro.props
const TendrillsofTerror = 'Tendrills of Terror'
---

<EventSection time={time} base={base}>
  <Skill name={TendrillsofTerror} />
  冰花预兆出现
  <Badge variant="emerald">米字形AoE</Badge>
</EventSection>
