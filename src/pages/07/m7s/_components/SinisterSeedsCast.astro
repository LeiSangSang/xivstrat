---
import type { Time } from '@/lib/utils'

import CastSection from '@/components/section/CastSection.astro'

import BruteAbombinator from './BruteAbombinator.astro'
import EventSection from '@/components/section/EventSection.astro'
import StratInterval from '@/components/StratInterval.astro'
import Span from '@/components/Span.vue'

interface Props {
  start: Time
  base?: Time
}

const { start, base = 0 }: Props = Astro.props
---

<EventSection>
  <StratInterval slot="time" start={start} base={base} duration={5.0} />
  <Fragment>
    <BruteAbombinator />
    读条
    <Span variant="yellow">Sinister Seeds</Span>
  </Fragment>
</EventSection>
