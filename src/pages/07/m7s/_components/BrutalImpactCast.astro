---
import type { Time } from '@/lib/utils'

import Badge from '@/components/Badge.astro'
import CastSection from '@/components/section/CastSection.astro'

import BruteAbombinator from './BruteAbombinator.astro'
import { translations } from '../_translations'

interface Props {
  start: Time
  base?: Time
  toln: number

  [key: string]: any
}

const { start, base = 0, toln }: Props = Astro.props
const brutalImpact = translations.brutalImpact
---

<CastSection start={start} base={base} duration={4.7} ability={brutalImpact} target>
  <BruteAbombinator slot="source" />
  <Badge variant="purple">AoE x{toln}</Badge>
</CastSection>
