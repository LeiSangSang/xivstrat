---
import type { Time } from '@/lib/utils'

import Badge from '@/components/Badge.astro'
import CastSection from '@/components/section/CastSection.astro'

import BruteAbombinator from './BruteAbombinator.astro'

interface Props {
  start: Time
  base?: Time
}

const { start, base = 0 }: Props = Astro.props
---

<CastSection
  start={start}
  base={base}
  duration={7.7}
  ability="Neo Bombarian Special"
  damage="180000"
  damageType="physical"
>
  <BruteAbombinator slot="source" />
  <Badge variant="purple">击飞</Badge>
</CastSection>
