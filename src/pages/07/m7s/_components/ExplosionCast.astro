---
import type { Time } from '@/lib/utils'

import Badge from '@/components/Badge.astro'
import CastSection from '@/components/section/CastSection.astro'

import BruteAbombinator from './BruteAbombinator.astro'

interface Props {
  start: Time
  base?: Time
}

const { start, base = 0 }: Props = Astro.props
---

<CastSection start={start} base={base} duration={8.7} ability="Explosion" damage="220000~760000" damageType="magical">
  <BruteAbombinator slot="source" />
  在场地上召唤陨石Aoe
  <Badge variant="purple">距离衰减</Badge>
  <Badge variant="purple">AoE x3</Badge>
</CastSection>
