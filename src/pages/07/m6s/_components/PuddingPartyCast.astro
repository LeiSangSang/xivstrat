---
import type { Time } from '@/lib/utils'

import Badge from '@/components/Badge.astro'
import RoleIcon from '@/components/RoleIcon.astro'
import CastSection from '@/components/section/CastSection.astro'

import SugarRiot from './SugarRiot.astro'

interface Props {
  start: Time
  base?: Time
}

const { start, base = 0 }: Props = Astro.props
---

<CastSection start={start} base={base} duration={4.7} ability="Pudding Party" target>
  <SugarRiot slot="source" />
  <Fragment slot="target">
    随机
    <RoleIcon role="healer" />
  </Fragment>
  <Badge variant="emerald">6m圆形</Badge>
  <Badge variant="yellow">分摊×5</Badge>
</CastSection>
