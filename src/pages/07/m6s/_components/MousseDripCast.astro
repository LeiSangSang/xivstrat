---
import type { Time } from '@/lib/utils'

import Badge from '@/components/Badge.astro'
import Span from '@/components/Span.vue'
import CastSection from '@/components/section/CastSection.astro'

import SugarRiot from './SugarRiot.astro'

interface Props {
  start: Time
  base?: Time
}

const { start, base = 0 }: Props = Astro.props
---

<CastSection start={start} base={base} duration={4.7} ability="Mousse Drip" target>
  <SugarRiot slot="source" />
  <Span slot="target" variant="pink">距离最远的2人</Span>
  <Badge variant="emerald">远引导</Badge>
  <Badge variant="yellow">分摊×4</Badge>
</CastSection>
