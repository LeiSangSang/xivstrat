---
import type { Time } from '@/lib/utils'

import Badge from '@/components/Badge.astro'
import CastSection from '@/components/section/CastSection.astro'

import SugarRiot from './SugarRiot.astro'

interface Props {
  start: Time
  base?: Time
}

const { start, base = 0 }: Props = Astro.props
---

<CastSection
  start={start}
  base={base}
  duration={6.7}
  ability="Ready Ore Not"
  target
  damage="200000"
  damageType="magical"
>
  <SugarRiot slot="source" />
  <Badge variant="purple">AoE</Badge>
</CastSection>
