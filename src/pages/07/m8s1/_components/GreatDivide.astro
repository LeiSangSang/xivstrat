---
import type { Time } from '@/lib/utils'

import Badge from '@/components/Badge.astro'
import CastSection from '@/components/section/CastSection.astro'

import HowlingBlade from '../_components/HowlingBlade.astro'

interface Props {
  start: Time
  base?: Time
  [key: string]: any
}

const { start, base = 0, ...rest }: Props = Astro.props
const ability = '一刀両断'
---

<CastSection
  start={start}
  base={base}
  duration={4.7}
  ability={ability}
  target="tank"
  targetTag="一仇"
  damage="1050000"
  damageType="physical"
  {...rest}
>
  <HowlingBlade slot="source" />
  <Badge variant="green">直线</Badge>
  <Badge variant="red">死刑</Badge>
</CastSection>
