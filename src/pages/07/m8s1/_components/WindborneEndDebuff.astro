---
import Buff from '@/components/Buff.astro'

import WindborneEnd from '@/assets/buff/07/m8s1/214267.png'

interface Props {
  tag?: string
  hover?: boolean
  class?: string
}

const name = 'Windborne End'

const { tag = '', hover = false, class: className = '' }: Props = Astro.props
---

<Buff
  icon={WindborneEnd}
  name={name}
  nameVariant="yellow"
  description="Condemned by the element of wind to perish when this effect expires. Effect can be removed through contact with a font of wind aether."
  tag={tag}
  hover={hover}
  class={className}
/>
