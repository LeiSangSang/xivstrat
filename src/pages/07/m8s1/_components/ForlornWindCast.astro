---
import type { Time } from '@/lib/utils'

import Badge from '@/components/Badge.astro'
import CastSection from '@/components/section/CastSection.astro'

import WolfOfWind from '../_components/entities/WolfOfWind.astro'

interface Props {
  start: Time
  base?: Time
  [key: string]: any
}

const ability = 'Forlorn Wind'

const { start, base = 0, ...rest }: Props = Astro.props
---

<CastSection
  start={start}
  base={base}
  duration={7.7}
  ability={ability}
  target
  damage="9999999"
  damageType="special"
  {...rest}
>
  <WolfOfWind slot="source" />
  <Badge variant="fuchsia">狂暴</Badge>
  <Badge variant="red">团灭</Badge>
</CastSection>
