---
import type { Time } from '@/lib/utils'

import Badge from '@/components/Badge.astro'
import CastSection from '@/components/section/CastSection.astro'

import HowlingBladeIcon from '../_components/HowlingBladeIcon.astro'

interface Props {
  start: Time
  base?: Time
  [key: string]: any
}

const ability = 'Aero III'

const { start, base = 0, ...rest }: Props = Astro.props
---

<CastSection
  start={start}
  base={base}
  duration={4.7}
  ability={ability}
  target
  damage="60000"
  damageType="magical"
  {...rest}
>
  <HowlingBladeIcon slot="source" />
  <Badge variant="green">击退</Badge>
  <Badge variant="yellow">AoE</Badge>
</CastSection>
