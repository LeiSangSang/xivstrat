---
import type { Time } from '@/lib/utils'

import Badge from '@/components/Badge.astro'
import CastSection from '@/components/section/CastSection.astro'

import HowlingBlade from '../_components/HowlingBlade.astro'

interface Props {
  start: Time
  base?: Time
}

const { start, base = 0 }: Props = Astro.props
---

<CastSection start={start} base={base} duration={3.7} ability="空間斬り" target damage="180000" damageType="physical">
  <HowlingBlade slot="source" />
  <Badge variant="purple">AoE</Badge>
</CastSection>
