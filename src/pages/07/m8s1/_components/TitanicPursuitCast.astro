---
import type { Time } from '@/lib/utils'

import Badge from '@/components/Badge.astro'
import CastSection from '@/components/section/CastSection.astro'

import HowlingBladeIcon from '../_components/HowlingBladeIcon.astro'

interface Props {
  start: Time
  base?: Time
  [key: string]: any
}

const { start, base = 0, ...rest }: Props = Astro.props
const ability = '斬空劍' //切断柱子+全屏aoe
---

<CastSection
  start={start}
  base={base}
  duration={3.7}
  target
  damage="65000"
  damageType="physical"
  ability={ability}
  {...rest}
>
  <HowlingBladeIcon slot="source" />
  ，全屏AoE以及砍竹子。
  <Badge variant="green">AoE</Badge>
</CastSection>
