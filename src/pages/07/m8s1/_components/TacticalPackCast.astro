---
import type { Time } from '@/lib/utils'

import Badge from '@/components/Badge.astro'
import CastSection from '@/components/section/CastSection.astro'

import HowlingBlade from '../_components/HowlingBlade.astro'

interface Props {
  start: Time
  base?: Time
  [key: string]: any
}

const { start, base = 0, ...rest }: Props = Astro.props
const ability = '光狼招来'
---

<CastSection start={start} base={base} duration={2.7} ability={ability} {...rest}>
  <HowlingBlade slot="source" />
  <Badge variant="green">召唤小怪</Badge>
</CastSection>
