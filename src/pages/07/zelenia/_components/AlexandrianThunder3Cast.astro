---
import type { Time } from '@/lib/utils'

import Badge from '@/components/Badge.astro'
import CastSection from '@/components/section/CastSection.astro'
import RoleIcon from '@/components/RoleIcon.astro'

import Zelenia from './Zelenia.astro'

interface Props {
  start: Time
  base?: Time
  [key: string]: any
}

const { start, base = 0, ...rest }: Props = Astro.props
---

<CastSection
  start={start}
  base={base}
  duration={4.7}
  target
  ability="Alexandrian Thunder III"
>
  <Zelenia slot="source" />
  <Fragment slot="target">
    <RoleIcon role="all" tag="全员" />
  </Fragment>
  <Badge variant="emerald">分散</Badge>
  <Badge variant="yellow">圆形Aoe</Badge>
</CastSection>

